<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResPublica.View.Sandbox"
		 	 xmlns:image="clr-namespace:ResPublica.View"
			 xmlns:controls="clr-namespace:ResPublica.View.Controls"
			 >

	<ContentPage.Content>

		<Grid >
			<Grid.RowDefinitions>
				<RowDefinition Height="100" />
				<RowDefinition Height="100" />
				<RowDefinition Height="100" />
				<RowDefinition Height="100" />
				<RowDefinition Height="100" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<controls:HREntry Text="Hello" Placeholder="Username..."></controls:HREntry>
			
			<Button Grid.Row="3" Text="Is this working"></Button>

			<StackLayout Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="5" HorizontalOptions="Center">
				<Label HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HorizontalOptions="Center" FontSize="16" Text="You don't have an account?" TextColor="White" />
				<Button Text="REGISTER" Margin="5" BackgroundColor="Transparent" TextColor="#88CBBA"  BorderColor="Transparent" BorderWidth="0"/>
			</StackLayout>

		</Grid>
	</ContentPage.Content>
</ContentPage>