						</FormattedString.Spans>
					</FormattedString>
				</Label.FormattedText>
			</Label>

			<Image Grid.Row="3" Source="Dots3_Middle.png"></Image>

			<Button Grid.Row="4" Text="Skip" HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"></Button>

