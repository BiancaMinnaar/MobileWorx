<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ResPublica.View.Sandbox"
			 xmlns:image="clr-namespace:ResPublica.Extensions"
			 BackgroundImage="{image:ImageResource Login_Background.jpg}">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="200" />
				<RowDefinition Height="200" />
				<RowDefinition Height="200" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Image Grid.Row="2"/>

			<StackLayout Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="5" HorizontalOptions="Center">
				<Label HorizontalTextAlignment="Start" VerticalTextAlignment="Center" HorizontalOptions="Center" FontSize="16" Text="You don't have an account?" TextColor="White" />
				<Button Text="REGISTER" Margin="5" BackgroundColor="Transparent" TextColor="#88CBBA" />
			</StackLayout>

		</Grid>
	</ContentPage.Content>
</ContentPage>