	<!--My Room-->
	<ContentPage >
		<ContentPage.Padding>
			<OnPlatform x:TypeArguments="Thickness">
				<On Platform="iOS, Android" Value="0,40,0,0" />
			</OnPlatform>
		</ContentPage.Padding>

		<Grid >
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
